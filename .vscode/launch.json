    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'code_describer'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=code_describer",
                    "--package=code_describer"
                ],
                "filter": {
                    "name": "code_describer",
                    "kind": "bin"
                }
            },
            "args": ["-r", "-e", "rs"],
            "cwd": "${workspaceFolder}"
        }
    ]
}